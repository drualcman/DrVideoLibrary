@page "/movie/{id}"

<div class="container">
    <MovieDetailComponent Movie=Movie />
</div>

@code {
    [Inject] ApiClient Client { get; set; }
    [Parameter] public string Id { get; set; }
    Movie Movie;

    protected override async Task OnParametersSetAsync()
    {
        Movie = await Client.GetMovieDetailsAsync(Id);
    }
}